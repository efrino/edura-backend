{
  "name": "backend-edura",
  "version": "1.0.0",
  "description": "Edura Backend with secure PDF generation",
  "scripts": {
    "dev": "nodemon server.js && npm run jobs && npm run setup:images",
    "start": "node server.js && npm run jobs && npm run setup:images",
    "jobs": "node worker/generate-sessions-worker.js",
    "start:with-jobs": "npm-run-all --parallel start jobs",
    
    "backup:test": "node scripts/test-backup.js",
    "backup:status": "node scripts/backup-status.js",
    "backup:trigger": "node scripts/trigger-backup.js",
    "backup:cleanup": "node scripts/cleanup-old-logs.js",
    "backup:check-routes": "node scripts/check-routes.js",
    "backup:db-test": "node scripts/test-database.js",
    
    "test:certificate": "node scripts/test-certificate.js",
    "monitor:certificate": "node scripts/monitor-certificate.js",
    "monitor:continuous": "node scripts/monitor-certificate.js continuous",
    "monitor:single": "node scripts/monitor-certificate.js single",
    
     "setup:images": "node utils/convert-images-to-base64.js",

    "health:check": "curl -f http://localhost:8080/health || curl -f http://localhost:10000/health || exit 1",
    "health:detailed": "curl -f http://localhost:8080/health/detailed || curl -f http://localhost:10000/health/detailed || exit 1",
    
    "build": "echo 'Build completed'",
    "deploy": "gcloud builds submit --tag gcr.io/$GOOGLE_CLOUD_PROJECT/backend-edura",
    "deploy:cloudrun": "./deploy-cloudrun.sh"
  },
  "keywords": ["education", "lms", "gemini-ai", "hapi", "quiz", "flashcards", "edura"],
  "engines": {
    "node": ">=18.0.0"
  },
  "author": "Edura Team",
  "license": "ISC",
  "dependencies": {
    "@google/genai": "^1.9.0",
    "@google/generative-ai": "^0.24.1",
    "@hapi/boom": "^10.0.1",
    "@hapi/hapi": "^21.4.0",
    "@hapi/inert": "^7.1.0",
    "@hapi/vision": "^7.0.3",
    "@supabase/supabase-js": "^2.49.8",
    "axios": "^1.9.0",
    "bcryptjs": "^3.0.2",
    "crypto": "^1.0.1",
    "dotenv": "^16.5.0",
    "hapi-swagger": "^17.3.2",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "midtrans-client": "^1.4.3",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.5",
    "papaparse": "^5.5.3",
    "pg": "^8.16.0",
    "puppeteer": "^24.12.1",
    "string-similarity": "^4.0.4",
    "uuid": "^11.1.0",
    
    "pdfkit": "^0.15.0",
    "playwright": "^1.48.0",
    "npm-run-all": "^4.1.5"
  },
  "devDependencies": {
    "nodemon": "^3.1.10"
  },
  "type": "commonjs"
}